<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_employee">

    <RelativeLayout
        android:layout_width="345dp"
        android:background="@color/cardview_shadow_start_color"
        android:layout_height="167dp">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_employee"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:layout_marginRight="16dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_employee_last_name"
            android:text="Employee last name"
            android:textSize="10pt"

            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_employee" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_employee_birth_date"
            android:textSize="15pt"
            android:text="Birth date"
            android:layout_above="@+id/tv_employee_last_name"
            android:layout_toEndOf="@+id/iv_employee" />

        <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_employee_first_name"
        android:text="Employee first name"
        android:textSize="10pt"
            android:layout_below="@+id/tv_employee_last_name"
            android:layout_alignStart="@+id/tv_employee_last_name" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_edit_employee"
            android:src="@android:drawable/ic_menu_edit"
            android:background="@color/colorAccent"
            android:layout_alignBottom="@+id/iv_employee"
            android:layout_toEndOf="@+id/tv_employee_last_name"
            android:layout_marginBottom="22dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_delete_employee"
            android:src="@android:drawable/ic_menu_delete"
            android:background="@color/colorAccent"
            android:layout_below="@+id/iv_employee"
            android:layout_toEndOf="@+id/tv_employee_last_name" />

    </RelativeLayout>


</android.support.v7.widget.CardView>